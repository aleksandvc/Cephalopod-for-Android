<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cephalopod.board.game"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.0" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="cephalopod.board.game.GameActivity"
            android:label="@string/title_activity_game"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cephalopod.board.game.LoginActivity"
            android:label="@string/title_login_activity" />
        <activity
            android:name="cephalopod.board.game.SignUpActivity"
            android:label="@string/title_signup_activity" />

        <intent-filter>
            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>

        <activity android:name="cephalopod.board.game.WelcomeActivity" />
        <activity
            android:name="cephalopod.board.game.AboutActivity"
            android:label="@string/title_about_activity" />
        <activity
            android:name="cephalopod.board.game.RulesActivity"
            android:label="@string/title_rules_activity" />
        <activity
            android:name="cephalopod.board.game.SettingsActivity"
            android:label="@string/title_settings_activity" />
    </application>

</manifest>