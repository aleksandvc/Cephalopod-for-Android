<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cephalopod.board.game.AboutActivity"
    android:orientation="vertical"
    android:background="@color/blue">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="@color/darkGrey"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Board game Cephalopod is created by Mark Steer."
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:textColor="@color/darkGrey"/>

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="GNU General Public License v3.Ã˜."
        android:textSize="20sp"
        android:layout_marginTop="-240dp"
        android:gravity="center"
        android:textColor="@color/darkGrey"/>
    <Button
        android:id="@+id/aboutBack_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="-150dp"
        android:background="@drawable/shadow"
        android:fontFamily="@string/app_name"
        android:onClick="back"
        android:text="Back"
        android:textColor="@color/darkGrey"
        android:textSize="20sp"


        />
</LinearLayout>

</LinearLayout>
