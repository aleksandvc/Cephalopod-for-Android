<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context="cephalopod.board.game.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView_choose_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="Choose game"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <RadioGroup
            android:id="@+id/radioGroup_choose_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            >

            <RadioButton
                android:id="@+id/radioButton_multiplayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Multiplayer" />

            <RadioButton
                android:id="@+id/radioButton_single_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Single Player" />

        </RadioGroup>
    </LinearLayout>
</RelativeLayout>
