<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue"
    tools:context="cephalopod.board.game.SignUpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:textSize="25sp"
        android:padding="20dp"
        android:textColor="@color/darkGrey"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:singleLine="true"
        android:textColorHint="@color/darkGrey"
        android:id="@+id/username_insert" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-20dp"
        android:textSize="25sp"
        android:padding="20dp"
        android:textColor="@color/darkGrey"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        android:maxLength="20"
        android:singleLine="true"
        android:textColorHint="@color/darkGrey"
        android:id="@+id/password_insert" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm password:"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-20dp"
        android:textSize="25sp"
        android:padding="20dp"
        android:textColor="@color/darkGrey"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        android:maxLength="20"
        android:textColorHint="@color/darkGrey"
        android:id="@+id/confirmpass_insert" />

    <Button
        android:id="@+id/registration_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="145dp"
        android:textColor="@color/darkGrey"
        android:fontFamily="@string/app_name"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shadow"
        android:onClick="sign_up"


        />
    <Button
        android:id="@+id/loggin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="145dp"
        android:textColor="@color/darkGrey"
        android:fontFamily="@string/app_name"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shadow"
        android:onClick="login"


        />
</LinearLayout>
